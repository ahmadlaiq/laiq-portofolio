---
import Layout from "../layouts/Layout.astro";
import data from "../data/blog.json";
import Card from "../components/Card.astro";
---

<Layout
  title="Blog"
  description="Blog about code contributions, developer advocate, open source collaboration, problem solver, software development, laravel developer, react developer, full stack developer, javascript developer, web developer, software engineer"
  keywords="code contributions,developer advocate, open source collaboration, problem solver, software development, laravel developer, react developer, full stack developer, javascript developer, web developer, software engineer"
  image="/favicon.svg"
>
<section>
<div class="container">
  <div class="content">
    <h1>Articles by Laiq</h1>
    {
      data.map((post) => (
        <Card
          href={post.link}
          title={post.title}
          description={post.description}
          date={post.date}
        />
      ))
    }
  </div>
</div>
</section>
</Layout>
